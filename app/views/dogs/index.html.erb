<div class="header">
  <div class="container">

  <%= link_to "Add a Pup", new_dog_path %>
  <h1>Pup-Adopt</h1>
    <img src="http://logofury.com/wp-content/uploads/2002/320.jpg" width="">
    <p>"Your future pet is waiting for you"</p>
  </div>
</div>

<div class="dogs">
  <div class="container">
    <div class="cards row">
      <% @dogs.each do |d| %>
      <div class="card col-xs-4">
        <%= image_tag d.image %>
        <h2><%= d.breed %></h2>
        <p><%= d.age %></p>
        <p><%= d.sex %></p>

        <%= link_to "Adopt Me", dog_path(d.id) %>
      </div>
      <% end %>
    </div>
  </div>
</div>






